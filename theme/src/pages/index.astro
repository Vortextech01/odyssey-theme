---
import { Container, FeatureCard } from '@littlesticks/odyssey-theme-components';

import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';
---

<Layout>
	<HomeHeroSection />
	<Container>
		<h2>The New Generation Of Workers</h2>
			<p>
			        Get started with our interactive laboratory playground! Check out our step-by-step walkthroughs to get a sneak peek of the road aheadðŸ‘€!
		        </p>
	<div style="position: relative; padding-bottom: calc(51.87847730600292% + 44px); height: 0;"><iframe src="https://app.supademo.com/embed/GM0DLmXMPj7adHp_4yakl" frameborder="0" webkitallowfullscreen="true" mozallowfullscreen="true" allowfullscreen style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"></iframe></div>
	</Container>

	<Container>
		<section class="feature-card__section">
			<h2>Our Company</h2>
			<p>
				Use one of our prebuilt company pages for your about page, contact page,
				legal pages, blog posts, etc.
			</p>
			<div class="feature-card__grid">
				<FeatureCard href="/sapiensia/about-us" title="Who is Sapiens?" imgSrc="/assets/images/home/ocean-hero.jpg">
				</FeatureCard>
				<FeatureCard href="/company/pricing" title="Pricing" imgSrc="/assets/images/home/sand-hero.jpg">
				</FeatureCard>
				<FeatureCard href="/blog/" title="The Archives" imgSrc="/assets/images/home/square.gif">
				</FeatureCard>
				<FeatureCard
					href="/blog/posts/remote-work-mental-health"
					title="Blog Post"
          imgSrc="/assets/images/home/screenshots/blog-post"
				>
				</FeatureCard>
				<FeatureCard
					href="/company/legal"
					imgSrc="/assets/images/home/screenshots/legal"
					title="Legal Page"
				>
				</FeatureCard>
			</div>
		</section>
	</Container>
</Layout>

<style>
	.feature-card__section {
		margin: var(--section-margin) auto;
	}
	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--theme-grid-gap);
	}
	@media (max-width: 768px) {
		.feature-card__grid {
			grid-template-columns: 1fr;
		}
	}
</style>
