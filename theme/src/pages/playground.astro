---
import { Container, FeatureCard } from '@littlesticks/odyssey-theme-components';

import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/playgroundherosection.astro';
import {
	TextCardSection,
	Container,
	Button,
	FormInput,
	FormSelect,
	FormTextarea,
} from '@littlesticks/odyssey-theme-components';
const seo = {
	title: 'Astro Odyssey Theme Style Guide',
	description: 'Get started on how to setup and use this Astro theme.',
};

const selectOptions = ['Option 1', 'Option 2', 'Option 3'];
---

<Layout>
  <HomeHeroSection />
  <script type='module' src='https://interfaces.zapier.com/assets/web-components/zapier-interfaces/zapier-interfaces.esm.js'></script>
  <zapier-interfaces-page-embed page-id='clgrpxnef0009l20f4dr27nrd' no-background='true' style={{width: "100%", height: "100vh", border: "none"}}></zapier-interfaces-page-embed>
  <div class="style-guide-forms__container">
				<div>
					<h3>Input With Label</h3>
					<FormInput type="text" label="Name" name="Name" placeholder="John Doe"
					/>
				</div>
				<div>
					<h3>Input Without Label</h3>
					<FormInput type="text" name="Name" placeholder="John Doe" />
				</div>
				<div>
					<h3>Select Dropdown</h3>
					<FormSelect options={selectOptions} />
				</div>
</Layout>

