---
import { Container, FeatureCard } from '@littlesticks/odyssey-theme-components';
import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/playgroundherosection.astro';
import ZapierEmbed from '../components/ZapierEmbed.tsx'; // adjust the path as needed
---

<Layout>
  <HomeHeroSection />
  <Container>
    <section class="feature-card__section">
      <h2>Quick Start</h2>
      
      <ZapierEmbed />

    </section>
  </Container>
</Layout>

<style>
  .feature-card__section {
    margin: var(--section-margin) auto;
  }
  .feature-card__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--theme-grid-gap);
  }
  @media (max-width: 768px) {
    .feature-card__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
