---
import { Container, FeatureCard } from '@littlesticks/odyssey-theme-components';

import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/playgroundherosection.astro';
---

<Layout>
  <playgroundherosection />
  <Container>
    <section class="feature-card__section">
      <h2>Playground</h2>
      <p>Explore our interactive playground.</p>
      <div class="playground__grid">
        <script type='module' src='https://interfaces.zapier.com/assets/web-components/zapier-interfaces/zapier-interfaces.esm.js'></script>
        <zapier-interfaces-page-embed page-id='clgrpxnef0009l20f4dr27nrd' no-background='true' style={{width: "100%", height: "75vh", max-height: "800px", border: "none"}}></zapier-interfaces-page-embed>
      </div>
    </section>
  </Container>
</Layout>

<style>
  .feature-card__section, .playground__grid {
    margin: var(--section-margin) auto;
  }
  .playground__grid {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--theme-grid-gap);
  }
  @media (max-width: 768px) {
    .playground__grid {
      flex-direction: column;
    }
  }
</style>
