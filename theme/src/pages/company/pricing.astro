---
import { PricingCard } from '../../components/theme-switcher/PricingCard.ts';
import { Icon } from 'astro-icon';
import { Container, Button } from '@littlesticks/odyssey-theme-components';
import settings from '../../config/settings.js';
import {ThemeSwitcher} from '../../components/theme-switcher/playgroundswitch';
---

<Container>
  <section class="hero-section__section">
    <div class="hero-section__text">
      <h1>Our Pricing</h1>
      <p>
        Choose the plan that fits your needs. Each plan offers a unique set of features and benefits. Let's start your AI journey with us.
      </p>
      <div class="hero-btns__container">
        <Button href="/dashboard/" customIcon
          >Continue
          <Fragment slot="icon">
            <Icon name="ic:baseline-chevron-right"/>
          </Fragment>
        </Button>
        <Button href="/dashboard/" unelevated>My Dashboard</Button>
      </div>
      {settings.enableThemeSwitcher && <ThemeSwitcher client:load/>}
    </div>
    <div class="hero-section__image">
      <picture>
        <img
          src="/assets/images/home/square.gif"
          alt="Sapiens IA Odyssey"
          id="home-hero-image"
        />
      </picture>
    </div>
  </section>

  <section class="pricing-section">
    <PricingCard 
      title="Laboratory Access Plan" 
      price="$50/mo" 
      features={JSON.stringify([
        "Access to exclusive AI research",
        "Access to AI models and algorithms",
        "1 AI training session per month",
        "Community support"
      ])}
      ctaLink="https://sapiens-ia.com/b/lGrHu"
    />
    <PricingCard 
      title="Business Plan" 
      price="$500/mo" 
      features={JSON.stringify([
        "All features of Laboratory Access Plan",
        "Priority support",
        "5 AI training sessions per month",
        "Access to premium AI models and algorithms",
        "Dedicated account manager"
      ])}
      ctaLink="https://chat.sapiens-ia.com"
    />
    <PricingCard 
      title="Enterprise Plan" 
      price="Contact us" 
      features={JSON.stringify([
        "All features of Business Plan",
        "Unlimited AI training sessions",
        "Custom AI model development",
        "Priority support 24/7",
        "Dedicated AI research team"
      ])}
      ctaLink="https://api.whatsapp.com/send?app_absent=0&phone=528131011335&text=Quiero+unirme+a+el+programa+de+sapiens+ia&type=phone_number"
    />
  </section>
</Container>

<style>
  /* ... existing styles ... */

  .pricing-section {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
</style>
